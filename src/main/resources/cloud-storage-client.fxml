<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.geekbrains.netty.client.Controller">

    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="603.0" >
          <MenuBar>
              <Menu mnemonicParsing="false" text="File">
                  <MenuItem mnemonicParsing="false" text="Close" />
              </Menu>
              <Menu mnemonicParsing="false" text="Edit">
                  <MenuItem mnemonicParsing="false" text="Delete" />
              </Menu>
              <Menu mnemonicParsing="false" text="Help">
                  <MenuItem mnemonicParsing="false" text="About" />
              </Menu>
             <VBox.margin>
                <Insets bottom="3.0" />
             </VBox.margin>
          </MenuBar>
          <HBox VBox.vgrow="ALWAYS">
                <VBox>
                      <TextField fx:id="clientPathField" onAction="#setClientPath" promptText="CLIENT PATH">
                         <VBox.margin>
                            <Insets bottom="3.0" left="3.0" />
                         </VBox.margin>
                      </TextField>
                      <ListView fx:id="clientFilesList" VBox.vgrow="ALWAYS">
                         <VBox.margin>
                            <Insets left="2.0" />
                         </VBox.margin>
                      </ListView>
                </VBox>
                <Pane maxWidth="130.0" minWidth="130.0">
                      <Button alignment="CENTER" layoutY="26.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="131.0" text="➜" textAlignment="CENTER">
                            <Font name="System Bold" size="20.0" />
                      </Button>
                      <Button alignment="CENTER" layoutY="89.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="131.0" rotate="180.0" text="➜" textAlignment="CENTER">
                            <Font size="20.0" />
                      </Button>
                      <Button alignment="CENTER" layoutY="152.0" mnemonicParsing="false" prefHeight="59.0" prefWidth="131.0" text="RENAME" textAlignment="CENTER">
                            <Font name="System Bold" size="12.0" />
                      </Button>
                      <Button alignment="CENTER" layoutY="214.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="131.0" text="DELETE" textAlignment="CENTER">
                            <Font name="System Bold" size="12.0" />
                      </Button>
                      <Button alignment="CENTER" layoutY="277.0" mnemonicParsing="false" prefHeight="59.0" prefWidth="131.0" text="NEW FOLDER" textAlignment="CENTER">
                            <Font name="System Bold" size="12.0" />
                      </Button>
                   <HBox.margin>
                      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                   </HBox.margin>
                </Pane>
                <VBox>
                      <TextField fx:id="serverPathField" onAction="#setServerPath" promptText="SERVER PATH">
                         <VBox.margin>
                            <Insets bottom="3.0" right="4.0" />
                         </VBox.margin>
                      </TextField>
                      <ListView fx:id="serverFilesList" VBox.vgrow="ALWAYS">
                         <VBox.margin>
                            <Insets right="4.0" />
                         </VBox.margin>
                      </ListView>
                </VBox>
          </HBox>
          <TextField fx:id="consoleLog" editable="false" promptText="LOG CONSOLE">
             <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
             </VBox.margin>
          </TextField>
    </VBox>

</AnchorPane>
